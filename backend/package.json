{
  "name": "notes-app-backend",
  "version": "1.0.0",
  "description": "Backend API for MERN Notes App with authentication and CRUD operations",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "mocha src/tests/**/*.test.js --timeout 10000",
    "test:watch": "mocha src/tests/**/*.test.js --watch --timeout 10000",
    "test:coverage": "nyc mocha src/tests/**/*.test.js --timeout 10000",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "sonar": "sonar-scanner",
    "prepare": "husky install"
  },
  "keywords": [
    "notes",
    "mern",
    "api",
    "authentication",
    "mongodb"
  ],
  "author": "Sandeep Kumar",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "mysql2": "^3.15.3",
    "pino": "^9.11.0",
    "pino-pretty": "^13.1.1",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "chai": "^6.0.1",
    "chai-http": "^5.1.2",
    "mocha": "^11.7.2",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sonarjs": "^0.23.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "sonarqube-scanner": "^3.3.0"
  }
